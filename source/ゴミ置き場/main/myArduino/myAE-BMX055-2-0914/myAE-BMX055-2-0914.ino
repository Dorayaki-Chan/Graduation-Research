float myGyro_integral(){//台形積分して角度を算出,y軸
  
  BMX055_Gyro();
  unsigned long newTime = micros();
  
  float timeDif=(float)(newTime-oldTime)/1000000;//micro sec
  Serial.print(" timeDif= ");
  Serial.print(timeDif);
  Serial.print(" , ");
  Serial.print(" yGyro= ");
  Serial.print(yGyro);
  Serial.print(" , ");
  float addGyro = yGyro+yGyroOld;
  Serial.print(" addGyro= ");
  Serial.print(addGyro);
  Serial.print(" , ");
  myDegreeAdd+=addGyro*timeDif/2;
  Serial.print(" myDegreeAdd= ");
  Serial.print(myDegreeAdd);
  Serial.print(" , ");
  myDegree = fmod(myDegreeAdd,360);//floatでは%演算子は使えない
  Serial.print(" myDegree= ");
  Serial.print(myDegree);
  oldTime = newTime;
  yGyroOld = yGyro;
  return myDegree;
}